<h2>Your Kitchen Inventory<h2>
  <h3>Fridge & Freezer </h3>
  <% @ingredients.each do |ingredient|%>
      <% if ingredient.user_id == current_user.id && ingredient.fridge_freezer_item != ""%>
      <li>
        <%= ingredient.fridge_freezer_item %>
        <form action="/ingredients/<%=ingredient.id%>/delete" method="post">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <input id="Delete ingredient" type="submit" value="Delete">
        </form>
      </li>
    <% end %>
  <% end %>
  <br>
  <h3> Pantry </h3>
